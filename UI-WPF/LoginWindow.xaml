<Window x:Class="UI_WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
	<Grid Margin="0,112,100,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" MinHeight="70"/>
			<RowDefinition Height="108"/>
			<RowDefinition Height="129"/>
		</Grid.RowDefinitions>
		<Grid Margin="75,66,90,9" Grid.Row="1" MinHeight="33">
			<Label x:Name="labelPassword" Content="Password" HorizontalAlignment="Left" Margin="0,0,0,-1" Width="97" FontSize="20" Height="33"/>
			<PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Height="33"  VerticalAlignment="Center" Width="430" Margin="97,0,0,0"  FontSize="20" HorizontalContentAlignment="Center"/>
		</Grid>
		<Grid Margin="75,23,90,52" Grid.Row="1" MinHeight="33">
			<Label x:Name="labelID" Content="User ID" HorizontalAlignment="Left" VerticalAlignment="Top" Width="97" Height="33"  FontSize="20" />
			<TextBox x:Name="IdInput" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" Text="Enter Here" VerticalAlignment="Top" Width="430" Margin="97,0,0,0" TextAlignment="Center" FontSize="20"/>
		</Grid>
		<Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="151" Margin="516,63,0,0" Grid.Row="2" Height="56" Click="LoginButton_Click"/>

	</Grid>
</Window>
